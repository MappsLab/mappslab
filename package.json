{
	"name": "mappslab-beta",
	"version": "0.0.1",
	"description": "",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"docz:dev": "docz dev",
		"dev:app": "yarn workspace mappslab-app dev",
		"dev:api": "yarn workspace mappslab-api dev",
		"db:stopall": "docker stop $(docker ps -q)",
		"db:test:init": "docker-compose -p mappslab-test -f ./api/__tests__/scripts/docker-compose.yml up -d",
		"db:test:start": "docker start mappslab-test_dgraph-zero mappslab-test_dgraph-server mappslab-test_dgraph-ratel",
		"db:test:seed": "yarn workspace mappslab-api db:test:seed",
		"db:test:stop": "docker stop mappslab-test_dgraph-zero mappslab-test_dgraph-server mappslab-test_dgraph-ratel",
		"db:staging:seed": "yarn workspace mappslab-api db:staging:seed",
		"build:app": "yarn workspace mappslab-app build:app",
		"build:api": "yarn workspace mappslab-api build:api",
		"build:mapp": "yarn workspace @mappslab/map build",
		"flow:doctor": "flow-mono install-types && flow-mono create-symlinks ./api/.flowconfig && flow-mono create-symlinks ./app/.flowconfig",
		"test:app": "yarn workspace mappslab-app test",
		"test:app:watch": "yarn workspace mappslab-app test:watch",
		"test:api": "yarn workspace mappslab-api test",
		"test:api:watch": "yarn workspace mappslab-api test:watch"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/good-idea/mappslab-beta.git"
	},
	"keywords": [
		"mapping",
		"education"
	],
	"author": "Joseph Thomas",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/good-idea/mappslab-beta/issues"
	},
	"homepage": "https://github.com/good-idea/mappslab-beta#readme",
	"workspaces": [
		"api",
		"app",
		"packages/*",
		"public",
		"shared"
	],
	"private": true,
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^7.2.1",
		"@commitlint/config-conventional": "^7.1.2",
		"eslint": "^4.19.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-prettier": "^2.9.0",
		"eslint-import-resolver-webpack": "^0.9.0",
		"eslint-plugin-flowtype": "^2.46.3",
		"eslint-plugin-import": "^2.11.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-react": "^7.7.0",
		"flow-bin": "^0.90.0",
		"flow-mono-cli": "^1.3.4",
		"flow-typed": "^2.5.1",
		"husky": "^1.1.2"
	},
	"resolutions": {
		"graphql": "14.0.2"
	} 
}
