{
  "name": "mappslab-api",
  "version": "0.0.1",
  "description": "Express-based central API backend for MappsLab",
  "main": "index.js",
  "author": "Joseph Thomas | Good Idea Studio",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=staging cross-env DEBUG=api,db node ./dist/server.js",
    "build": "yarn build:clean && yarn build:compile",
    "build:clean": "rimraf ./dist",
    "build:compile": "cross-env NODE_ENV=production cross-env ENV=production babel ./src -d ./dist",
    "dev": "yarn docker:dev:up && yarn dev:watch",
    "dev:staging:build": "docker build --tag mappslab-api .",
    "dev:staging": "docker run -p 3000:3000 mappslab-api",
    "dev:watch": "cross-env ENV=development cross-env DEBUG=api,db nodemon --watch ./src ./src/server.js --exec babel-node",
    "test": "cross-env ENV=test cross-env DEBUG=test cross-env TEST_DB=true jest",
    "test:coverage": "cross-env ENV=test cross-env DEBUG=test cross-env TEST_DB=true jest --coverage",
    "test:watch": "cross-env ENV=development cross-env DEBUG=test cross-env TEST_DB=true jest --watch",
    "ci-test": "yarn db:test:init && yarn db:test:start && yarn db:test:seed && yarn test",
    "docker:init": "yarn docker:test:init && yarn docker:dev:up && yarn localstack:setup",
    "docker:stopall": "docker stop $(docker ps -q)",
    "docker:test:init": "docker-compose -p mappslab-test -f ./docker-compose.test.yml up -d && sleep 5",
    "docker:test:start": "docker start mappslab-test_dgraph-zero mappslab-test_dgraph-server mappslab-test_dgraph-ratel && sleep 5",
    "docker:dev:up": "docker-compose -p mappslab-dev -f ./docker-compose.dev.yml up -d",
    "docker:dev:start": "docker start mappslab-dev_dgraph-zero mappslab-dev_dgraph-server mappslab-dev_dgraph-ratel",
    "db:dev:init": "yarn db:dev:schema && yarn db:dev:seed",
    "db:test:seed": "cross-env NODE_ENV=test cross-env TEST_DB=true cross-env DEBUG=seed,db babel-node ./src/__tests__/scripts/seedTestDatabase.js",
    "db:test:stop": "docker stop mappslab-test_dgraph-zero mappslab-test_dgraph-server mappslab-test_dgraph-ratel",
    "db:dev:schema": "cross-env NODE_ENV=development cross-env DEBUG=api,db babel-node ./src/database/scripts/updateSchema.js",
    "db:dev:seed": "cross-env NODE_ENV=development cross-env DEBUG=seed,db babel-node ./src/__tests__/scripts/seedNewDatabase.js",
    "db:dev:stop": "docker stop mappslab-dev_dgraph-zero mappslab-dev_dgraph-server mappslab-dev_dgraph-ratel",
    "db:staging:seed": "cli-confirm 'Do you really want to reset the staging database?' && cross-env NODE_ENV=staging cross-env DEBUG=seed,db babel-node ./src/__tests__/scripts/seedNewDatabase.js",
    "db:staging:schema": "cross-env NODE_ENV=staging cross-env DEBUG=api,db babel-node ./src/database/scripts/updateSchema.js",
    "localstack:setup": "aws --endpoint-url=http://localhost:4572 s3 mb s3://mappslab-beta && aws --endpoint-url=http://localhost:4572 s3api put-bucket-acl --bucket mappslab-beta --acl public-read",
    "deploy:dev": "yarn build && now --docker && now alias",
    "deploy": "yarn build && now -t $ZEIT_TOKEN --docker && now alias -t $ZEIT_TOKEN"
  },
  "dependencies": {
    "@hapi/joi": "15.0.3",
    "apollo-server": "^2.12.0",
    "apollo-server-express": "^2.12.0",
    "aws-sdk": "^2.663.0",
    "batch-promises": "^0.0.3",
    "bcrypt": "^4.0.1",
    "convict": "^5.2.0",
    "cors": "^2.8.5",
    "crypto-promise": "^2.1.0",
    "debug": "^4.1.1",
    "deepmerge": "^4.2.2",
    "dgraph-js": "^1.2.1",
    "dotenv": "^8.2.0",
    "escape-string-regexp": "^4.0.0",
    "express": "^4.17.1",
    "flat": "^5.0.0",
    "gm": "^1.23.1",
    "graphql": "^15.0.0",
    "graphql-subscriptions": "^1.1.0",
    "graphql-tools": "^5.0.0",
    "graphql-upload": "^11.0.0",
    "grpc": "^1.24.2",
    "json5": "^2.1.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mapslice": "^2.0.1",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.0",
    "sharp": "^0.25.2",
    "smart-fs": "^1.11.11",
    "stream-to-array": "^2.3.0",
    "temp-dir": "^2.0.0",
    "uuid": "^7.0.3",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-flow": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.4.0",
    "babel-plugin-import": "^1.13.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cli-confirm": "^1.0.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "faker": "^4.1.0",
    "flow-bin": "^0.123.0",
    "flow-typed": "^3.1.0",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2"
  },
  "resolutions": {
    "**/**/fs-capacitor": "^5.0.0",
    "**/graphql-upload": "^11.0.0"
  }
}
