{
  "name": "mappslab-api",
  "version": "0.0.1",
  "description": "Express-based central API backend for MappsLab",
  "main": "index.js",
  "author": "Joseph Thomas | Good Idea Studio",
  "license": "ISC",
  "scripts": {
    "start": "cross-env DEBUG=api node ./dist/server.js",
    "build": "cross-env NODE_ENV=production cross-env ENV=production babel ./src -d ./dist",
    "dev": "cross-env ENV=development cross-env DEBUG=api nodemon --watch ./src ./src/server.js --exec babel-node",
    "test": "cross-env ENV=development cross-env DEBUG=test cross-env TEST_DB=true jest --coverage",
    "test:watch": "cross-env ENV=development cross-env DEBUG=test cross-env TEST_DB=true jest --watch",
    "db:test:seed": "cross-env TEST_DB=true cross-env DEBUG=seed babel-node ./src/__tests__/scripts/seedTestDatabase.js",
    "db:staging:seed": "cross-env ENV=staging cross-env DEBUG=seed babel-node ./src/__tests__/scripts/seedNewDatabase.js",
    "deploy": "yarn build && now && now alias"
  },
  "dependencies": {
    "bcrypt": "^3.0.2",
    "crypto-promise": "^2.1.0",
    "debug": "^4.1.0",
    "deepmerge": "^2.2.1",
    "dgraph-js": "^1.2.1",
    "dotenv": "^6.1.0",
    "flat": "^4.1.0",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tools": "^4.0.3",
    "graphql-yoga": "^1.16.7",
    "grpc": "^1.16.0",
    "joi": "^14.0.6",
    "json5": "^2.1.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.90.0",
    "flow-typed": "^2.5.1",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.2"
  },
  "resolutions": {
    "graphql": "14.0.2"
  }
}